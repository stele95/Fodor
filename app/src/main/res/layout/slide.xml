<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/layoutslide"
    android:fitsSystemWindows="true">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/slide_image"
        android:src="@drawable/image_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_slide_1"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/slide_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description_slide"
        android:text="Ovo je opis ovde treba da pise sta sve moze korisnik da radi sa aplikacijom iliti jedna od funkcija"
        android:padding="24dp"
        android:textAlignment="center"
        android:textColor="@color/white"/>

</LinearLayout>